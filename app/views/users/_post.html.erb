<div class="bg-primary" style="padding:20px;
                              border-radius:10px;
                              margin:10px">
  <h4><%= @post.body %></h4>
  <div style="padding:5px;
              float:right;
              border-radius: 5px;
              background-color: #ddd;
              color: #000;
              width: 25%;">

  <div style="height:20px;
              width:20px;
              border-radius:5px;
              background-color:<%= current_user.color%>;float:left">
  </div>

  <div>
    <%= @user.email %> <a href="#" data-toggle="modal" data-target=".edit-post-<%=@post.id%>">Edit</a> | <%= link_to "Delete", user_post_path(current_user, @post), :method => :delete %>
  </div>
  </div>
</div>
