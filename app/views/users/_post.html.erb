<% @post_author = User.find(@post.user_id) %>
<div class="post-box" id="div-<%=@post.id %>">
  <h4 id="post-<%= @post.id %>"><%= @post.format.html_safe %></h4>
  <a href="/users/<%=@post_author.id%>" class="remove-link-style"><div class="post-user-info-box">

    <div class="post-user-color-box" style="background-color:<%= @post_author.color%>">
    </div>

  <div>

      <% if current_user == @post_author %>
        <span class="post-user-text"><%= @post_author.handle %>
        <a href="#" data-toggle="modal" data-target=".edit-post-<%=@post.id%>">Edit</a> | <%= link_to "Delete", user_post_path(current_user, @post), :remote => true, :method => :delete %></span>
      <% else %>
             <span class="post-user-text"><%= @post_author.handle %>
      <% end  %>
  </div>

  </div></a>
</div>
